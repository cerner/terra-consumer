{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": [
     "stylelint-suitcss"
  ],
  "rules": {
    "max-nesting-depth": 3,
    "scss/at-mixin-pattern": "^(terraConsumer-)[a-z]+([a-z0-9-]+[a-z0-9]+)?$",
    "suitcss/custom-property-no-outside-root": true,
    "custom-property-pattern": [
      "^(terra|terraConsumer)-(?:[A-Z][a-zA-Z0-9]+)*(?:-[a-z0-9][a-zA-Z0-9]+)*?(?:--[a-z0-9][a-zA-Z0-9-]+)*?$",
      {
        "message": "Custom property names should match the SUIT CSS naming convention"
      }
    ],
    "selector-class-pattern": [
      "^terraConsumer-(?:[A-Z][a-zA-Z0-9]+)*(?:-[a-z0-9][a-zA-Z0-9]+)*?(?:--[a-z0-9][a-zA-Z0-9-]+)*?$|^(?:terraConsumer-)?(?:u|is|has|js)(?:-[a-z0-9][a-zA-Z0-9-]*)+$",
      {
        "message": "Class names should match the SUIT CSS naming convention"
      }
    ]
  }
}
